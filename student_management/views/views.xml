<?xml version="1.0" encoding="utf-8"?>
<odoo>

                    <!-- Student views-->
    <record id="student_view_form" model="ir.ui.view">
        <field name="name">student.view.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="seq" />
                            <field name="name" />
                            <field name="addr" />
                            <field name="phn" />
                        </group>                       
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">student.view.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="seq" />
                <field name="name" />
                <field name="addr" />
                <field name="phn" />                                
            </tree>
        </field>
    </record>
    <record id="action_student_menu" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="student_root_menu" name="Student Management" />
    <menuitem id="management_student" name="Student" parent="student_root_menu" action="action_student_menu" />
</odoo>